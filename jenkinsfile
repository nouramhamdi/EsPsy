pipeline {
    agent any

    stages {
        stage('Install dependencies') {
            steps {
                 dir('back') {
                        sh 'npm install'
                    }
            }
        }
        stage('Unit Test') {
            steps {
                script {
                    dir('back'){
                        sh 'npm test'
                    }
                    
                }
            }
        }

        stage('SonarQube Analysis') {
            steps{
            script {
        def scannerHome = tool 'scanner'
        withSonarQubeEnv {
        sh "${scannerHome}/bin/sonar-scanner"
        }
    }
        }
    }
    
        stage('Build application') {
            steps {
                     dir('back') {
                        sh 'npm run build-dev'
                    }
            }
        }
    }
}
